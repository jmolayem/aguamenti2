<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4 well well-sm">
            <legend><a href="http://www.jquery2dotnet.com"><i class="glyphicon glyphicon-globe"></i></a> Add to the network</legend>
<%= form_for @model, multipart: true do |f| %>
  <% if flash[:errors].try(:any?) %>
      <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h2><%= pluralize(flash[:errors].keys.count, "error") %> prohibited this model from being saved:</h2>

      <ul>
      <% flash[:errors].each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", :placeholder => "name of predictive model"%>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", :placeholder => "tell us what you are modelling"%>
  </div>

  <div class="form-group">
    <%= f.label :accuracy %>
    <%= f.text_area :accuracy, class: "form-control", :placeholder => "Express accuracy or coefficient of determination as percent"%>
  </div>
  <div class="form-group">
    <%= f.label :algorithm %>
    <%= f.text_area :algorithm, class: "form-control", :placeholder => "What was the best algorithm you used?"%>
  </div>
  <div class="form-group">
    <%= f.label :size %>
    <%= f.text_area :size, class: "form-control", :placeholder => "In thousands, how many rows is your training data?"%>
  </div>
  <div class="form-group">
    <%= f.label :organization %>
    <%= f.text_area :organization, class: "form-control", :placeholder => "what organization are you helping?"%>
  </div>

  <div class="form-group">
    <%= f.label :api_key %>
    <%= f.text_field :api_key, class: "form-control", :placeholder => "input API key from Azure ML 50 cents/2000 predicts" %>
  </div>

  <div class="form-group">
    <%= f.label :endpoint %>
    <%= f.text_field :endpoint, class: "form-control", :placeholder => "input API URI provided by Azure ML studio"  %>
  </div>

  <div class="form-group">
    <h2>Inputs</h2>
    <%= f.fields_for :inputs do |input_fields| %>
      <%= render 'input_fields', f: input_fields %>
    <% end %>
    <%= link_to_add_association 'add input receptor', f, :inputs, class: "btn btn-primary" %>
  </div>

  <div class="form-group">
    <h2>Outputs</h2>
    <%= f.fields_for :outputs do |output_fields| %>
      <%= render 'output_fields', f: output_fields %>
    <% end %>
    <%= link_to_add_association 'add output receptor', f, :outputs, class: "btn btn-primary" %>
  </div>

  <div class="form-group">
    <%= f.button "Connect Neuron", class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Firing Neuron..."} %>
  </div>
<% end %>
</div>
</div>
</div>
</br>
