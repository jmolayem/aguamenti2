<table class="table table-striped table-bordered table-hover">
  <tr>
    <th class="center">Image</th>
    <th class="center">Name</th>
    <th class="center">Description</th>
    <th class="center">Action</th>
</tr>

  <% @models.each do |model| %>
<tr>
            <td><%= image_tag model.image.url(:thumb) %></td>
            <td><%= model.name %></td>
            <td><%= model.description %></td>
            <td>
              <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                  Action <span class="caret"></span>
                </button>
              <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Use', model%></li>
              <li><%= link_to 'Edit', edit_model_path(model), class: "glyphicon glyphicon-pencil" %></li>
             <li><%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-trash" %></li>
           </ul>
         </div>
              </td>
            </tr>
            <% end %>
          </table>
<br>

<% if user_signed_in? %>
  <%= link_to 'New Mode;', new_model_path, class: "btn btn-link" %>
<% end %>
