<p id="notice"><%= notice %></p>

<div class="center">
<div class="row">
  <% @models.each do |model| %>
    <div class="col-md-3">
      <div class="thumbnail">
            
        <div class="caption">
        <h3><%= model.name %></h3>
        <p><%= model.description %></p>
          <%= link_to 'Show', model, class: "btn btn-link" %>
          <%= link_to 'Edit', edit_model_path(model), class: "btn btn-link" %>
          <%= link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to "New model", new_model_path, class: "btn btn-link" %>
