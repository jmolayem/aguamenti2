<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @model.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @model.name %></h3>
    <p><%= @model.description %></p>
  </div>

  <%= form_tag generate_result_model_path(@model) do %>
    <% @model.inputs.each do |input| %>
      <div class="form-group">
        <%= label_tag "model[#{input.name}]", input.name %>
        <%= input_tag_for_input(input) %>
      </div>
    <% end %>
    <div class="form-group">
      <%= submit_tag 'Submit', class: "btn btn-primary" %>
    </div>
  <% end %>


</div>

<div class="row">
  <table class="table">
    <thead>
      <% @model.inputs.each do |input| %>
        <th><%= input.name %></th>
      <% end %>
      <% @model.outputs.each do |output| %>
        <th><%= output.name %></th>
      <% end %>
    </thead>
    <tbody>
      <% @results.each do |result| %>
        <tr>
        <% result.values.each do |value| %>
          <td><%= value %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="center">
  <div class="fb-comments" data-href="http://localhost:3000/models" data-width="600" data-numposts="5"></div>
</div>

<%= link_to 'Edit', edit_model_path(@model), class: "btn btn-link" %>
<%= link_to 'Back', models_path, class: "btn btn-link" %>
