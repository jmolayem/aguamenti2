<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @model.image.url %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @model.name %></h3>
    <p><%= @model.description %></p>
  </div>
</div>

<%= link_to 'Edit', edit_model_path(@model), class: "btn btn-link" %>
<%= link_to 'Back', models_path, class: "btn btn-link" %>