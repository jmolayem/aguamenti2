<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-4 well well-sm">
            <legend><a href="http://www.jquery2dotnet.com"><i class="glyphicon glyphicon-globe"></i></a> Feed the Brains!</legend>
<%= form_for @datagallery, multipart: true do |f| %>
  <% if flash[:errors].try(:any?) %>
      <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h2><%= pluralize(flash[:errors].keys.count, "error") %> prohibited this model from being saved:</h2>

      <ul>
      <% flash[:errors].each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>

  <div class="form-group">
    <%= f.label :dataset %><br>
    <%= f.file_field :dataset, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :snippet %><br>
    <%= f.file_field :snippet, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", :placeholder => "name of predictive model" %>
  </div>
  <div class="form-group">
    <%= f.label :size %>
    <%= f.text_area :size, class: "form-control", :placeholder => "In thousands, how many rows is your training data?"%>
  </div>
  <div class="form-group">
    <%= f.label :organization %>
    <%= f.text_area :organization, class: "form-control", :placeholder => "what organization are you helping?"%>
  </div>
  <div class="form-group">
    <%= f.button "Connect Data", class: "btn btn-success", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Loading..."} %>
  </div>
</br>
</br>
<% end %>
</div>
</div>
</div>