<p id="notice"><%= notice %></p>
<div class="center">
<%= link_to new_convnetimage_path, class: "btn btn-primary", data: { no_turbolink: true } do %>
  <i class="glyphicon glyphicon-plus"></i> New Brain
<% end %>
</div>

<div class="center">
<div class="row">
  <% @convnetimages.each do |convnetimage| %>
  <div class="col-md-3">
      <div class="thumbnail">
        <%= image_tag convnetimage.image.url %>
        <div class="caption">
        <h3><%= convnetimage.name %></h3>
          <%= link_to 'Use', convnetimage, class: "btn btn-primary"%>
          <% if user_signed_in? %>
            <% if current_user.admin? %>
          <%= link_to 'Edit', edit_convnetimage_path(convnetimage), class: "glyphicon glyphicon-pencil" %>
          <%= link_to 'Destroy', convnetimage, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-trash" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

<br>
