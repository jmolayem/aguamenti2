<link href="http://fontawesome.io/assets/font-awesome/css/font-awesome.css" rel="stylesheet" media="screen">  
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading"><%= @convnetimage.name %></h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-database wow bounceIn text-primary"></i>
                        <h3>Dataset Size</h3>
                        <h4><%="#{@convnetimage.size}K images" %></h4>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-university wow bounceIn text-primary" data-wow-delay=".1s"></i>
                        <h3>Organization</h3>
                        <h4><%= "#{@convnetimage.description}" %></h4>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-bullseye wow bounceIn text-primary" data-wow-delay=".2s"></i>
                        <h3>Accuracy</h3>
                        <h4><%="#{@convnetimage.accuracy}%" %></h4>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-download wow bounceIn text-primary" data-wow-delay=".3s"></i>
                        <h3>Understand the Dataset</h3>
                        <%= link_to 'Preview', @convnetimage.snippet.url, class:"btn btn-primary"%>
                        <%= link_to 'Full', @convnetimage.dataset.url, class:"btn btn-primary"%>
                    </div>
                </div>
            </div>
        </div>
    </section>

<p>Usages left: <%= @convnet_usages_left %></p>
<%= form_for @new_convnetimage_result do |f| %>
  <%= f.hidden_field :convnetimage_id, value: @convnetimage.id %>
  <%= f.label :image %>
  <%= f.file_field :image, class: "form-control" %>

  <div class="form-group">
    <%= submit_tag 'fire neurons', class: "btn btn-primary" %>
  </div>
<% end %>
<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
    <tr class="success">
      <th>Iteration ID</th>
      <th>Status</th>
      <th>Result</th>
    </tr>
  </thead>
  <% @convnetimage_results.each do |convnetimage_result| %>
    <tr>
      <td><%= convnetimage_result.response_id %></td>
      <td><%= convnetimage_result.state %></td>
      <td><%= convnetimage_result.labels.join(', ') %></td>
   </tr>
  <% end %>
</table>

<div class="center">
  <div class="fb-comments" data-href="http://localhost:3000/models#{model.id}" data-width="600" data-numposts="5"></div>
</div>

