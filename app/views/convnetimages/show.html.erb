<link href="http://fontawesome.io/assets/font-awesome/css/font-awesome.css" rel="stylesheet" media="screen">  
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading"><%= @convnetimage.name %></h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-database wow bounceIn text-primary"></i>
                        <h3>Dataset Size</h3>
                        <h4><%="#{@convnetimage.size}K images" %></h4>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-university wow bounceIn text-primary" data-wow-delay=".1s"></i>
                        <h3>Organization</h3>
                        <h4><%= "#{@convnetimage.description}" %></h4>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-bullseye wow bounceIn text-primary" data-wow-delay=".3s"></i>
                        <h3>Accuracy</h3>
                        <h4><%="#{@convnetimage.accuracy}%" %></h4>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-download wow bounceIn text-primary" data-wow-delay=".5s"></i>
                        <h3>Understand the Dataset</h3>
                        <%= link_to 'Preview', @convnetimage.snippet.url, class:"btn btn-primary"%>
                        <%= link_to 'Full', @convnetimage.dataset.url, class:"btn btn-primary"%>
                    </div>
                </div>
            </div>
        </div>
    </section>

<section class="bg-primary" id="about">
    <div class="container">
<div class="row">
  <div class="col-xs-12 col-md-8">
    <h3>Description</h3>
    <p><%="#{@convnetimage.description}"%></p> 
  </div>
  <div class="col-xs-6 col-md-4">
    <h3> Predict </h3>
<p>Glucose Level: <%= @convnet_usages_left %></p>
<%= form_for @new_convnetimage_result do |f| %>
  <%= f.hidden_field :convnetimage_id, image: @convnetimage.id %>
  <%= f.label :image %>
  <%= f.file_field :image, class: "form-control" %>
<br>
  <div class="form-group">
    <%= submit_tag 'fire neurons', class: "btn btn-danger" %>
  </div>
<% end %>

</div>
</div>
    </div>
</section>

    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Results</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class = "container">
          <div class = "row"
                <div class="col-lg-12 text-center">
<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
    <tr class="success">
      <th>Value</th>
      <th>Completed</th>
      <th>Result</th>
    </tr>
  </thead>
  <% @convnetimage_results.each do |convnetimage_result| %>
    <tr>
      <td><%= convnetimage_result.image %></td>
      <td><%= convnetimage_result.completed? %></td>
      <td><%= convnetimage_result.response['predictions'] %></td>
   </tr>
  <% end %>
</table>

    <section id="services">
    <div class="container">
<div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Comments</h2>
  <div class="fb-comments" data-href="http://localhost:3000/convnetimages#{convnetimage.id}" data-width="600" data-numposts="5"></div>
</div>
</div>
</div>

<%= link_to 'Back', convnetimages_path %>
          <% if user_signed_in? %>
            <% if current_user.admin? %>
<%= link_to 'Edit', edit_convnetimage_path(@convnetimage) %> 
<% end %>
          <% end %>
  </section>
</br>
</br>
</br>

