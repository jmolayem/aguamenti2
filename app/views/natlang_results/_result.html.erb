
    <% if result.completed? %>
      <h4 class="section-heading">Top 5 Predictions for this Sentence:</h4>
      <table class="table">
          <thead>
            <tr>
              <th>Prediction</th>
              <th>Probability</th>
            </tr>
          </thead>
          <tbody>
            <% result.predictions.each do |prediction| %>
              <tr>
                <td><%= prediction.class_name %></td>
                <td><%= prediction.probability %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    <% else %>
      <i class="fa fa-cog fa-spin fa-5x"></i>
    <% end %>
